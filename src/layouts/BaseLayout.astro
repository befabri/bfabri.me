---
import Footer from "@components/layouts/Footer.astro";
import Head from "@components/layouts/Head.astro";
import Header from "@components/layouts/Header.astro";
import { SITE } from "@utils/config.mjs";

interface Props {
    title: string;
}

const { title } = Astro.props;
const { language = "en" } = SITE;
---

<!doctype html>
<html class="scroll-smooth" lang={language}>
    <Head title={title} />
    <body class="antialiased bg-white text-zinc-800 dark:bg-neutral-900 dark:text-zinc-300">
        <Header />
        <slot />
        <Footer />
        <style is:global>
            /* Improve Page speed */
            /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
            img {
                content-visibility: auto;
            }
        </style>
    </body>
</html>
