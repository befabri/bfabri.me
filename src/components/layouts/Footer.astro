---
import Link from "@components/ui/Link.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="mb-12 mt-28 lg:mt-32">
    <div class="text-center text-sm text-zinc-500 dark:text-zinc-200 flex flex-col gap-1 justify-center">
        <span>
            {t("Développé par")}
            <span class="font-bold">Benjamin Fabri</span>
        </span>
        <span>
            <Link
                href="https://github.com/befabri/bfabri.me"
                text={t("Code source du site")}
                ariaLabel="Link to website source code"
            />
        </span>
    </div>
</footer>
