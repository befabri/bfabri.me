---
interface Props {
    href: string;
    size?: "md" | "lg";
    block?: boolean;
    style?: "outline" | "primary" | "inverted" | "muted";
    class?: string;
    [x: string]: any;
}

const { href, block, size = "lg", style = "primary", class: className, ...rest } = Astro.props;

const sizes = {
    lg: "px-5 py-2.5",
    md: "px-4 py-2",
};

const styles = {
    outline:
        "bg-transparent hover:bg-sky-100 border-2 border-sky-500 text-sky-500 hover:border-sky-600 dark:text-white dark:border-sky-700 dark:hover:border-sky-800 dark:hover:bg-sky-900",
    primary:
        "bg-sky-700 hover:bg-sky-700/80 border-2 border-transparent text-white dark:text-white dark:bg-sky-500 dark:hover:bg-sky-500/80",
    inverted:
        "bg-white hover:bg-sky-500 border-2 border-sky-500 text-sky-500 hover:text-white dark:bg-white dark:hover:bg-sky-600 dark:text-white dark:border-transparent",
    muted: "bg-sky-500 hover:bg-sky-400 border-2 border-transparent text-white dark:text-white dark:bg-sky-700 dark:hover:bg-sky-600",
};
---

<a
    href={href}
    {...rest}
    class:list={[
        "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 tracking-tight text-sm",
        block && "md:w-full",
        sizes[size],
        styles[style],
        className,
    ]}
    ><slot />
</a>
