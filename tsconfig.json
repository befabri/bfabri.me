{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@i18n/*": [
        "i18n/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "exclude": ["public"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
}